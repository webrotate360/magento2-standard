<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="pixriot" type="host">*.pixriot.com</value>
				<value id="storeimaging" type="host">*.storeimaging.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="pixriot" type="host">*.pixriot.com</value>
				<value id="storeimaging" type="host">*.storeimaging.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
